{
  "name": "babystep-kata",
  "version": "1.0.0",
  "description": "BabyStep kata in TypeScript",
  "scripts": {
    "precompile": "rimraf app/**/*.js test/**/*.js",
    "compile": "tsc",
    "pretest": "rimraf app/**/*.js test/**/*.js",
    "test": "jest --env=jsdom"
  },
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/chai": "~3.5.2",
    "@types/jest": "^29.2.6",
    "@types/mocha": "~2.2.41",
    "@types/node": "~7.0.18",
    "chai": "~3.5.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jsdom": "^21.0.0",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "rimraf": "~2.5.2",
    "source-map-support": "0.5.9",
    "ts-node": "~3.1.0",
    "typescript": "~3.0.3"
  },
  "jest": {
    "testEnvironment": "jsdom"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "text"
    ]
  }
}
